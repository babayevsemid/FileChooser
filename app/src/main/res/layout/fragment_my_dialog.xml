<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onClick">

        <TextView
            android:id="@+id/choosePhotoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="55dp"
            android:layout_marginTop="24dp"
            android:minHeight="40dp"
            android:gravity="center"
            android:text="Choose photo"
            android:background="@color/colorAccent"
            android:onClick="onClick"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chooseVideoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="55dp"
            android:layout_marginTop="24dp"
            android:minHeight="40dp"
            android:gravity="center"
            android:text="Choose video"
            android:background="@color/colorAccent"
            android:onClick="onClick"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choosePhotoTxt" />

        <TextView
            android:id="@+id/takePhotoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="55dp"
            android:layout_marginTop="24dp"
            android:minHeight="40dp"
            android:gravity="center"
            android:text="Take photo"
            android:background="@color/colorAccent"
            android:onClick="onClick"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chooseVideoTxt" />


        <ImageView
            android:id="@+id/coverImg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginVertical="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/takePhotoTxt"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>